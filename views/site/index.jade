extends layout

block content
	.row
		.col-md-7
			p Bienvenue sur mon clone de Twitter
		.col-md-5.well
			form.form-horizontal
				.form-group
					label.col-sm-4 Email
					.col-sm-7
						input(type='email', placeholder='Entrez votre email', name='email').form-control
				.form-group
					label.col-sm-4 Nom complet
					.col-sm-7
						input(type='text', placeholder='Entrez votre nom', name='name').form-control
				.form-group
					label.col-sm-4 Mot de passe
					.col-sm-7
						input(type='password', placeholder='Entrez votre mot de passe', name='password').form-control
				.form-group
					label.col-sm-4 Répétez le mot de passe
					.col-sm-7
						input(type='password', placeholder='Répétez votre mot de passe', name='password_w').form-control
				.form-group
					.col-sm-offset-4.col-sm-10
						button(type="submit").btn.btn-primary S'inscrire